#!/usr/bin/env python

# Check that the expected tket version requirement is present for:
# - tket-tests
# - tket-proptests
# - pytket
# Usage: check-tket-reqs <version>
# E.g.: check-tket-reqs 1.0.2

import json
import os
import subprocess
import sys
import conan

version = sys.argv[1]

paths = [
    os.path.join(".", "tket", "test", "conanfile.py"),
    os.path.join(".", "tket", "proptest", "conanfile.py"),
    os.path.join(".", "pytket", "conanfile.py"),
]

conan_ver = conan.conan_version.major.value

jsondump = "conaninfo.json"

if conan_ver == 1:
    for path in paths:
        subprocess.run(["conan", "info", "--path", "--json", jsondump, path])
        with open(jsondump) as f:
            info = json.load(f)
        os.remove(jsondump)
        assert any(
            comp["reference"].startswith("conanfile")
            and f"tket/{version}@tket/stable" in comp["requires"]
            for comp in info
        )
else:
    assert conan_ver == 2
    for path in paths:
        with open(jsondump, "w") as f:
            subprocess.call(
                ["conan", "graph", "info", path, "--format", "json"], stdout=f
            )
        with open(jsondump) as f:
            info = json.load(f)
        os.remove(jsondump)
        assert any(
            node["ref"].startswith(f"tket/{version}@tket/stable")
            for node in info["nodes"]
        )
